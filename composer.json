{
    "name": "wizmo/sandbox",
    "description": "A sandbox to play with php and a lot of nice tools to become a better programmer.",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Rico Schulz",
            "email": "rico.schulz@wizmo.com"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "phpmd/phpmd": "^2.8",
        "squizlabs/php_codesniffer": "^3.5",
        "behat/behat": "^3.6",
        "overtrue/phplint": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Wizmo\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "php-cs": "phpcs -p --standard=PSR12 --report=junit --report-file=reports/checkstyle.xml ./app",
        "php-unit": "phpunit --configuration phpunit.xml --colors=never --coverage-text",
        "php-md": "phpmd ./app text cleancode,codesize,controversial,design,naming,unusedcode --reportfile reports/phpmd.txt",
        "behat": "behat -f junit --out reports/features",
        "php-lint": "phplint ./app --xml=reports/lint.xml"
    }
}
