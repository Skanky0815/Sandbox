{
    "name": "wizmo/sandbox",
    "description": "A sandbox to play with php and a lot of nice tools to become a better programmer.",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Rico Schulz",
            "email": "rico.schulz@wizmo.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "phpmd/phpmd": "^2.8",
        "squizlabs/php_codesniffer": "^3.5",
        "behat/behat": "^3.6",
        "overtrue/phplint": "^2",
        "friends-of-behat/mink-extension": "^2.4",
        "behat/mink-selenium2-driver": "^1.4",
        "behat/mink-goutte-driver": "^1.2",
        "sebastian/phpcpd": "^5.0",
        "vimeo/psalm": "^3.11",
        "infection/infection": "^0.16.3"
    },
    "autoload": {
        "psr-4": {
            "Wizmo\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit",
            "Tests\\Features\\": "tests/features/bootstrap"
        }
    },
    "scripts": {
        "php-cs": "phpcs -p --standard=PSR12 --report=junit --report-file=reports/checkstyle.xml ./app",
        "php-unit": "phpunit --configuration phpunit.xml --colors=never --coverage-text",
        "php-md": "phpmd ./app text cleancode,codesize,controversial,design,naming,unusedcode --reportfile reports/phpmd.txt  --ignore-violations-on-exit",
        "php-feature": "behat -f junit --out reports/features",
        "php-lint": "phplint ./app --xml=reports/lint.xml",
        "php-cpd": "phpcpd ./app --log-pmd=reports/phpcpd.xml",
        "php-psalm": "psalm",
        "infection": "infection"
    }
}
